@{
    ViewData["Title"] = "Home Page";
}
<style>
    .container1 {
        position: relative;
    }

    .image1 {
        opacity: 1;
        display: block;
        width: 100%;
        height: auto;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .middle1 {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .container1:hover .image1 {
        opacity: 0.3;
    }

    .container1:hover .middle1 {
        opacity: 1;
    }
    .container2 {
        position: relative;
    }


    .image2 {
        opacity: 1;
        display: block;
        width: 100%;
        height: auto;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .middle2 {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .container2:hover .image2 {
        opacity: 0.3;
    }

    .container2:hover .middle2 {
        opacity: 1;
    }


</style>

<div class="text-center">
    <h3 class="display-4">Choose Your Empire</h3>
    <div class="d-flex justify-content-between">


        <div class="col-6 container1">


            <img src="https://www.wargamer.com/wp-content/uploads/2021/09/total-war-rome-board-game-map-expansions-1-580x334.jpg"
                 class="image1"
                 style="height:80%" onclick="location.href='@Url.Action("Privacy", "Home", new { armyid = 1 })'" />

            <span class="middle1" style="color:navy">Cavalry Archers</span>

        </div>
        <div class="col-6 container2">
            <img src="https://miro.medium.com/max/1128/0*ISK7Vy6PBGvuJmI0.jpg"
                 style="height:80%"
                 class="image2"
                onclick="location.href='@Url.Action("Privacy", "Home", new { armyid = 2 })'" />

            <span class="middle2" style="color:navy">Infantry</span>
        </div>


    </div>

</div>


